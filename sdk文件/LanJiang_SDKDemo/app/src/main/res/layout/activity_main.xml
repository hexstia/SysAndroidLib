<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lanjiangTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lanjiang：顶部水平居中"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lanJang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lanJiangTx"
        android:onClick="click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lanjiangTx"
        app:layout_constraintStart_toStartOf="@+id/lanjiangTx"
        app:layout_constraintTop_toTopOf="@+id/lanjiangTx" />

</androidx.constraintlayout.widget.ConstraintLayout>